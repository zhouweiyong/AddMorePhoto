<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:background="@drawable/selector_dialog_first_item"
            android:gravity="center"
            android:padding="10dp"
            android:text="条目1"
            android:textColor="#007aff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_second"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:background="@drawable/selector_dialog_second_item"
            android:gravity="center"
            android:padding="10dp"
            android:text="条目2"
            android:textColor="#007aff"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/selector_dialog_cancel_btn"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="#007aff"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>